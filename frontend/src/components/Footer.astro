---
import { contacts, site } from '../content/constants';
import type { UiStrings } from '../content/types';

interface Props {
  altLink?: { href: string; label: string };
  ui: UiStrings;
}

const { altLink, ui } = Astro.props;
const year = new Date().getFullYear();
---

<footer class="border-t border-ink-800/30 bg-obsidian-950">
  <div
    class="mx-auto flex max-w-6xl flex-col items-center gap-6 px-4 py-10 sm:flex-row sm:items-start sm:justify-between"
  >
    <div class="text-center sm:text-start">
      <p class="text-sm text-ink-400">
        &copy; {year}
        {site.name}. {ui.footer.rights}
      </p>
      {
        altLink && (
          <a
            href={altLink.href}
            class="mt-2 inline-block text-sm text-ink-400 transition-colors hover:text-gold-400"
          >
            {altLink.label}
          </a>
        )
      }
    </div>

    <div class="flex flex-col gap-2.5 text-center sm:text-end">
      <a
        href={`mailto:${contacts.email}`}
        class="flex items-center justify-center gap-2 text-sm text-ink-400 transition-colors hover:text-gold-400 sm:justify-end"
      >
        <svg
          class="h-4 w-4 shrink-0"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
          ></path>
        </svg>
        {contacts.email}
      </a>
      <a
        href={contacts.telegram}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center justify-center gap-2 text-sm text-ink-400 transition-colors hover:text-gold-400 sm:justify-end"
      >
        <svg class="h-4 w-4 shrink-0" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"
          ></path>
        </svg>
        {contacts.telegramLabel}
      </a>
    </div>
  </div>
</footer>
