---
interface ProblemItem {
  title: string;
  description: string;
  icon: string;
}

interface Props {
  heading: string;
  items: readonly ProblemItem[];
}

const { heading, items } = Astro.props;

const icons: Record<string, string> = {
  brain:
    'M12 2a7 7 0 0 0-4.6 12.3A4 4 0 0 0 4 18v1a1 1 0 0 0 1 1h14a1 1 0 0 0 1-1v-1a4 4 0 0 0-3.4-3.7A7 7 0 0 0 12 2z',
  sparkles: 'M12 2l2.4 7.2L22 12l-7.6 2.8L12 22l-2.4-7.2L2 12l7.6-2.8z',
  clock: 'M12 2a10 10 0 1 0 0 20 10 10 0 0 0 0-20zm0 4v6l4.2 2.5',
  layers: 'M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5',
  grid: 'M3 3h7v7H3zM14 3h7v7h-7zM3 14h7v7H3zM14 14h7v7h-7z',
  repeat:
    'M17 1l4 4-4 4M3 11V9a4 4 0 0 1 4-4h14M7 23l-4-4 4-4M21 13v2a4 4 0 0 1-4 4H3',
};
---

<section class="bg-sand-50 py-24">
  <div class="mx-auto max-w-6xl px-4">
    <h2
      class="reveal text-center font-display text-3xl font-bold text-ink-900 sm:text-4xl"
    >
      {heading}
    </h2>
    <div class="mt-14 grid gap-6 sm:grid-cols-3">
      {
        items.map((item, i) => (
          <div
            class="reveal group rounded-2xl border-s-4 border-s-gold-400/0 bg-white p-7 shadow-sm transition-all duration-300 hover:border-s-gold-400 hover:shadow-md"
            style={`transition-delay: ${i * 0.1}s`}
          >
            <div class="mb-5 flex h-12 w-12 items-center justify-center rounded-xl bg-gold-400/10">
              <svg
                class="h-6 w-6 text-gold-500"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d={icons[item.icon] ?? icons.brain}
                />
              </svg>
            </div>
            <h3 class="font-display text-lg font-semibold text-ink-900">
              {item.title}
            </h3>
            <p class="mt-2 text-ink-600">{item.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
