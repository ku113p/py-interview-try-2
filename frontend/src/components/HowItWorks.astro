---
interface Step {
  number: number;
  title: string;
  description: string;
}

interface Props {
  heading: string;
  steps: readonly Step[];
  bonus: { title: string; description: string };
}

const { heading, steps, bonus } = Astro.props;
---

<section class="bg-sand-50 py-24">
  <div class="mx-auto max-w-6xl px-4">
    <h2
      class="reveal text-center font-display text-3xl font-bold text-ink-900 sm:text-4xl"
    >
      {heading}
    </h2>
    <div class="mt-14 grid gap-10 sm:grid-cols-3">
      {
        steps.map((step, i) => (
          <div
            class="reveal relative text-center"
            style={`transition-delay: ${i * 0.12}s`}
          >
            <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full border-2 border-gold-400 bg-gold-400/10 font-display text-2xl font-bold text-gold-600">
              {step.number}
            </div>
            <h3 class="mt-5 font-display text-xl font-semibold text-ink-900">
              {step.title}
            </h3>
            <p class="mt-2 text-ink-600">{step.description}</p>
          </div>
        ))
      }
    </div>
    <div
      class="reveal mx-auto mt-14 max-w-2xl rounded-2xl border border-gold-400/30 bg-gold-400/5 p-7 text-center"
      style="transition-delay: 0.4s"
    >
      <h3 class="font-display text-lg font-semibold text-gold-700">
        {bonus.title}
      </h3>
      <p class="mt-2 text-ink-700">{bonus.description}</p>
    </div>
  </div>
</section>
