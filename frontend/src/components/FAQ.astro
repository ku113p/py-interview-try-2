---
interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  items: readonly FAQItem[];
  heading: string;
}

const { items, heading } = Astro.props;
---

<section class="bg-obsidian-800 py-24">
  <div class="mx-auto max-w-3xl px-4">
    <h2
      class="reveal text-center font-display text-3xl font-bold text-ink-50 sm:text-4xl"
    >
      {heading}
    </h2>
    <div class="mt-14 space-y-0 divide-y divide-ink-700/40">
      {
        items.map((item, i) => (
          <details
            class="reveal group"
            style={`transition-delay: ${i * 0.05}s`}
          >
            <summary class="flex cursor-pointer items-center justify-between py-5 font-display text-lg font-semibold text-ink-100 transition-colors hover:text-gold-400">
              {item.question}
              <svg
                class="ml-4 h-5 w-5 shrink-0 text-gold-400/60 transition-transform duration-300 group-open:rotate-180 group-open:text-gold-400"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19 9l-7 7-7-7"
                />
              </svg>
            </summary>
            <p class="pb-5 leading-relaxed text-ink-300">{item.answer}</p>
          </details>
        ))
      }
    </div>
  </div>
</section>
